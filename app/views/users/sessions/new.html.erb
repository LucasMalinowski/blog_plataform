<div class="container mx-auto px-4 py-8">
  <h2 class="text-3xl font-bold mb-6">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "bg-white p-6 rounded-lg shadow-lg space-y-4" }) do |f| %>
    <div class="field">
      <%= f.label :email, class: "block font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "block font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "text-gray-700" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "bg-green-500 text-white px-4 py-2 rounded-full hover:bg-green-600" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
