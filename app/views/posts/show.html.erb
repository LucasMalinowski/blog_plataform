<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<p>By <%= @post.user.email %></p>

<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-secondary' %>
<%= link_to 'Back', posts_path, class: 'btn btn-light' %>

<h2>Comments</h2>
<%= render @post.comments %>
<%= render 'comments/form', post: @post %>
