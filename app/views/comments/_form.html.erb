<div class="mt-4">
  <h2 class="text-lg font-semibold">Add a Comment</h2>
  <%= form_with(model: [post, Comment.new], local: true) do |form| %>
    <div>
      <%= form.label :body, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :body, rows: 3, class: "mt-1 block w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div class="mt-4">
      <%= form.submit 'Add Comment', class: "btn btn-primary bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600" %>
    </div>
  <% end %>
</div>
