<div class="comment bg-gray-100 p-4 rounded-lg mt-2" id="<%= dom_id(comment) %>">
  <div id="edit_comment_<%= comment.id %>" class="hidden mb-6 bg-white p-6 rounded-lg shadow-lg relative">
    <%= render "comments/form", post: post, comment: Comment.new %>
  </div>
  <div id="comment_<%=comment.id%>_info">
    <p class="text-gray-800"><%= comment.body %></p>
    <p class="text-sm text-gray-500">By <%= comment.user.name %></p>
    <p class="text-gray-500 text-xs mt-2">Posted <%= comment.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
  </div>
  <% if current_user == comment.user %>
    <div class="flex justify-between items-center mt-4">
      <div class="flex space-x-4">
        <%= link_to 'Edit', edit_post_comment_path(post, comment), data: { turbo_stream: true }, class: "text-green-500 hover:underline" %>
        <%= button_to 'Delete', post_comment_path(post, comment), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 hover:underline" %>
      </div>
    </div>
  <% end %>
</div>
